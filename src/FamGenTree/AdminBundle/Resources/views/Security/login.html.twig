{% extends 'FamGenTreeThemeAdminBundle:Default:_base.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}

    <!-- **********************************************************************************************************************************************************
    MAIN CONTENT
    *********************************************************************************************************************************************************** -->

    <div id="login-page">
        <div class="container">

            <form class="form-login" action="{{ path("fos_user_security_check") }}" method="post">
                <h2 class="form-login-heading">sign in now</h2>
                {% if error %}
                    <div class="login-wrap">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}
                <div class="login-wrap">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                    <input type="text" id="username" name="_username"
                           class="form-control" placeholder="{{ 'security.login.username'|trans }}"
                           value="{{ last_username }}" required="required" autofocus="autofocus"/>
                    <br>
                    <input type="password"
                           id="password" name="_password" required="required"
                           class="form-control" placeholder="{{ 'security.login.password'|trans }}"/>
                    <label class="checkbox">
                    <span class="pull-right">
                        <a data-toggle="modal" href="#myModal"> Forgot Password?</a>
                    </span>
                    </label>
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                    {#href="{{ path("fos_user_security_check") }}"#}
                    <button id="_submit" name="_submit"
                            class="btn btn-theme btn-block" type="submit"><i class="fa fa-lock"></i>
                        {{ 'security.login.submit'|trans }}
                    </button>

                    {% if social_login is defined or registration is defined %}
                        <hr>

                        {% if social_login is defined %}
                            <div class="login-social-link centered">
                                <p>or you can sign in via your social network</p>
                                <button class="btn btn-facebook" type="submit"><i class="fa fa-facebook"></i> Facebook
                                </button>
                                <button class="btn btn-twitter" type="submit"><i class="fa fa-twitter"></i> Twitter
                                </button>
                            </div>
                        {% endif %}
                        {% if registration is defined %}
                            <div class="registration">
                                Don't have an account yet?<br/>
                                <a class="" href="#">
                                    Create an account
                                </a>
                            </div>
                        {% endif %}
                    {% endif %}
                </div>

                <!-- Modal -->
                <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal"
                     class="modal fade">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal"
                                        aria-hidden="true">&times;</button>
                                <h4 class="modal-title">Forgot Password ?</h4>
                            </div>
                            <div class="modal-body">
                                <p>Enter your e-mail address below to reset your password.</p>
                                <input type="text" name="email" placeholder="Email" autocomplete="off"
                                       class="form-control placeholder-no-fix">

                            </div>
                            <div class="modal-footer">
                                <button data-dismiss="modal" class="btn btn-default" type="button">Cancel</button>
                                <button class="btn btn-theme" type="button">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- modal -->

            </form>

        </div>
    </div>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="{{ asset('bundles/famgentreethemeadmin/js/jquery.js') }}"></script>
    <script src="{{ asset('bundles/famgentreethemeadmin/js/bootstrap.min.js') }}"></script>
{% endblock %}


